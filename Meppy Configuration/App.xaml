<Application x:Class="Wiltoga.Meppy.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Wiltoga.Meppy"
             StartupUri="Configuration.xaml">
    <Application.Resources>
        <Style
            TargetType="Image">
            <Style.Triggers>
                <Trigger
                    Property="IsEnabled"
                    Value="False">
                    <Setter
                        Property="Opacity"
                        Value=".5" />
                </Trigger>
            </Style.Triggers>
        </Style>
    </Application.Resources>
</Application>